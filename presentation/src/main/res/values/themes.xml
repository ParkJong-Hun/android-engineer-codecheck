<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AndroidEngineerCodeCheck" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/gray_normal</item>
        <item name="colorPrimaryVariant">@color/gray_dark</item>
        <item name="colorOnPrimary">@color/white_normal</item>
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorSecondaryVariant">@color/blue_normal</item>
        <item name="colorOnSecondary">@color/black_light</item>
        <item name="android:statusBarColor">@color/white_dark</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.App.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.App.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.App.Headline3</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.App.Subtitle2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>

        <item name="buttonStyle">@style/Widget.App.Button</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
    </style>

    <style name="TextInputLayoutNoBorder" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorIconDrawable">@null</item>
        <item name="errorIconTint">@null</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundMode">none</item>
    </style>

    <style name="Widget.App.ActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/white_dark</item>
    </style>

    <style name="TextAppearance.App.ActionBar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="android:paddingStart">@dimen/padding_button</item>
        <item name="android:paddingEnd">@dimen/padding_button</item>
        <item name="android:paddingTop">@dimen/spacing_s</item>
        <item name="android:paddingBottom">@dimen/spacing_s</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/elevation_medium</item>
        <item name="cardCornerRadius">@dimen/corner_radius_medium</item>
        <item name="contentPadding">@dimen/padding_card</item>
        <item name="android:layout_margin">@dimen/spacing_s</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/blue_normal</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:minHeight">@dimen/input_height</item>
        <item name="hintTextColor">@color/gray_light</item>
        <item name="android:textColorHint">@color/gray_light</item>
    </style>

    <style name="Widget.App.CardView.SearchBar">
        <item name="cardCornerRadius">@dimen/corner_radius_large</item>
        <item name="cardElevation">@dimen/elevation_medium</item>
        <item name="contentPadding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="Widget.App.CardView.ListItem">
        <item name="cardCornerRadius">@dimen/corner_radius_medium</item>
        <item name="cardElevation">@dimen/elevation_small</item>
        <item name="contentPadding">@dimen/padding_card</item>
        <item name="android:layout_marginHorizontal">@dimen/spacing_s</item>
        <item name="android:layout_marginVertical">@dimen/spacing_xs</item>
    </style>

    <style name="Widget.App.TextInputLayout.SearchBar" parent="TextInputLayoutNoBorder">
        <item name="endIconTint">@color/gray_light</item>
        <item name="startIconTint">@color/gray_light</item>
        <item name="hintTextColor">@color/gray_light</item>
        <item name="android:textColorHint">@color/gray_light</item>
    </style>

    <style name="Widget.App.EditText.Search" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/padding_input</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textColorHint">@color/gray_light</item>
    </style>
</resources>